{
    "name": "emulsion",
    "version": "0.2.15",
    "description": "Better gaming throught chemistry",
    "homepage": "https://yphil.gitlab.io/2025/05/23/Emulsion/",
    "license": "GPLv3",
    "author": {
        "name": "yPhil",
        "email": "yphil@gnu.org"
    },
    "keywords": [
        "games",
        "emulation"
    ],
    "type": "module",
    "main": "main.js",
    "scripts": {
        "start": "electron . --no-sandbox",
        "prebuild": "rm -rf ./dist ./out ./node_modules ./repack ./tmp",
        "install:linux": "npm install sdl2-gamecontroller",
        "postinstall": "node -e \"if (process.platform === 'linux' && !process.env.CI) require('child_process').execSync('npm run install:linux', {stdio: 'inherit'})\"",
        "build": "electron-builder --config builder.yml --linux"
    },
    "devDependencies": {
        "code-narrator": "^1.0.17",
        "electron": "^34.0.2",
        "electron-builder": "^25.1.8"
    },
    "dependencies": {
        "axios": "^1.7.9",
        "cheerio": "^1.0.0",
        "fs": "^0.0.1-security",
        "node-fetch": "^3.3.2",
        "path": "^0.12.7",
        "steamgriddb": "^2.2.0",
        "tree-kill": "^1.2.2"
    },
    "optionalDependencies": {
        "sdl2-gamecontroller": "^1.0.11"
    }
}
