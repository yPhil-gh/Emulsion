{
    "name": "EmumE",
    "version": "1.0.6",
    "context": "prod",
    "description": "A frontend to launch games",
    "homepage": "https://gitlab.com/yphil/emume",
    "license": "GPLv3",
    "author": {
        "name": "yPhil",
        "email": "yphil@gnu.org"
    },
    "keywords": [],
    "main": "src/main.js",
    "scripts": {
        "start": "electron . --no-sandbox",
        "prebuild": "rm -rfv ./dist ./out ./node_modules ./repack ./tmp && npm install",
        "build": "electron-builder --linux --x64 --publish never"
    },
    "build": {
        "files": [
            "**/*",
            "!**/*.map",
            "!**/*.log",
            "!**/node_modules/**/*.md",
            "!**/node_modules/**/*.ts",
            "!**/node_modules/**/test",
            "!**/node_modules/**/tests",
            "!**/node_modules/**/examples"
        ],
        "appId": "com.yphil.emume",
        "productName": "EmumE",
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "img/emume-logo.png",
            "category": "Utility",
            "artifactName": "${productName}-${version}.${ext}"
        },
        "asar": true,
        "compression": "store"
    },
    "devDependencies": {
        "electron": "^34.0.2",
        "electron-builder": "^25.1.8"
    },
    "dependencies": {
        "axios": "^1.7.9",
        "cheerio": "^1.0.0",
        "fs": "^0.0.1-security",
        "path": "^0.12.7"
    },
    "platforms": [
        "amiga",
        "pcengine",
        "dreamcast",
        "gamecube",
        "n64"
    ]
}
