{
    "name": "emulsion",
    "version": "1.0.15",
    "context": "prod",
    "description": "Symmetrical launch break",
    "homepage": "https://gitlab.com/yphil/emulsion",
    "license": "GPLv3",
    "author": {
        "name": "yPhil",
        "email": "yphil@gnu.org"
    },
    "keywords": ["games", "emulation"],
    "type": "module",
    "main": "src/js/main.js",
    "scripts": {
        "start": "electron . --no-sandbox",
        "prebuild": "rm -rf ./dist ./out ./node_modules ./repack ./tmp && npm install",
        "build": "electron-builder --linux --x64 --publish never"
    },
    "build": {
        "files": [
            "**/*",
            "!**/*.map",
            "!**/*.log",
            "!**/node_modules/**/*.md",
            "!**/node_modules/**/*.ts",
            "!**/node_modules/**/test",
            "!**/node_modules/**/tests",
            "!**/node_modules/**/examples"
        ],
        "appId": "com.yphil.emulsion",
        "productName": "emulsion",
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "img/emume.png",
            "category": "Utility",
            "artifactName": "${productName}-${version}.${ext}"
        },
        "asar": true,
        "compression": "store"
    },
    "devDependencies": {
        "electron": "^34.0.2",
        "electron-builder": "^25.1.8"
    },
    "dependencies": {
        "axios": "^1.7.9",
        "cheerio": "^1.0.0",
        "fs": "^0.0.1-security",
        "node-fetch": "^3.3.2",
        "path": "^0.12.7",
        "sdl2-gamecontroller": "^1.0.11",
        "steamgriddb": "^2.2.0",
        "tree-kill": "^1.2.2"
    },
    "platforms": [
        "amiga",
        "pcengine",
        "dreamcast",
        "gamecube",
        "snes",
        "n64",
        "settings"
    ]
}
